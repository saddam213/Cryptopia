

<script id="chatTipbotTemplate" type="text/html">
	<tr class="chat-msgid-{{Id}}">
		<td>
			<i title="@Resources.Chat.templateRemovePostHint" style="cursor:pointer;display:{{IsAdmin}}" class="text-danger fa fa-times pull-right chat-remove-message" data-messageid="{{Id}}"></i>
			<i title="@Resources.Chat.templateGiveKarmaHint" style="cursor:pointer;display:{{IsMine}}" class="text-info fa icon-thumbs-up pull-right chat-karma-tip" data-messageid="{{Id}}" data-user="{{ChatHandle}}"></i>
			<p class="chat-item-message" style="font-size:10px;padding:0px;margin:0px"><i class="fa fa-flash text-warning"></i><b> {{UserName}}: </b>{{{Message}}}</p>
		</td>
	</tr>
</script>

