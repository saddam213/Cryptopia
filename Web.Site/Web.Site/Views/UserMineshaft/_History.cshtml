	<hr class="settings-page-seperator" />
</div>
<table id="miningPayouts" class="table table-striped table-hover table-condensed" data-action="@Url.Action("GetPayouts", "UserMineshaft")" data-action-mineshaft="@Url.Action("Index", "MineShaft")" >
	<thead>
		<tr>
