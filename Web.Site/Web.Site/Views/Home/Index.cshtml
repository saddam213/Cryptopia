@{
	ViewBag.Title = Resources.Home.homeTitle;
	ViewBag.ReturnUrl = "/Home";
	ViewBag.IsFullPage = true;
}

@Html.AntiForgeryToken()
<!-- Header -->
<a href="#about"></a>
<div class="intro-header">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="intro-message">
					<img class="img-responsive" src="/content/images/home.png" style=" max-width: 600px; width: 75%; vertical-align: top;margin: 0 auto;" />

					<ul class="list-inline intro-action-buttons banner-message">
						<li class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
							<a href="/Exchange" class="btn btn-info btn-lg"><i class="fa fa icon-barchartasc"></i><span class="network-name"> @Resources.Home.homeExchangeLink</span></a>
						</li>
						<li class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
							<a href="/Marketplace" class="btn btn-info btn-lg"><i class="fa icon-shoppingcartalt fa-fw"></i><span class="network-name"> @Resources.Home.homeMarketplaceLink</span></a>
						</li>
						<li class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
							<a href="/Forum" class="btn btn-info btn-lg"><i class="fa icon-forumsalt fa-fw"></i><span class="network-name"> @Resources.Home.homeForumsLink</span></a>
						</li>
						<li class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
							<a href="/Deposit/Display?currency=NZDT" class="btn btn-info btn-lg"><i class="fa icon-value-coins fa-fw"></i><span class="network-name"> @String.Format(Resources.Home.homeNZD2CryptoLink, "$NZD")</span></a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="content-section-a home-content-section-a">
	<div class="container">
		@*<div id="byline">
			<h2 style="text-align: center"><b>Cryptopia</b> is a comprehensive cryptocurrency service provider, backed by industry experts and informed by years of experience.</h2>
		</div>*@
		<div class="row home-offerings">

			<div class="home-block col-lg-4 col-md-4 col-sm-12">
				<h2 class="section-heading"><i class="fa icon-barchartasc"></i> @Resources.Home.homeExchangeHeadline</h2>
				<img class="img-responsive" src="/Content/Images/intro-screen-exchange.png" alt="">
				<p class="lead">
					<br />@Resources.Home.homeExchangeLine1Text
					<br /><br />@Resources.Home.homeExchangeLine2Text
					<br /><br />@Resources.Home.homeExchangeLine3Text
				</p>

			</div>

			<div class="home-block col-lg-4 col-md-4 col-sm-12">
				<h2 class="section-heading"><i class="fa icon-shoppingcartalt"></i> @Resources.Home.homeMarketplaceHeadline</h2>
				<img class="img-responsive" src="/Content/Images/intro-screen-market.png" alt="">
				<p class="lead">
					<br />@Resources.Home.homeMarketplaceLine1Text
					<br /><br />@Resources.Home.homeMarketplaceLine2Text
				</p>

			</div>

			<div class="home-block col-lg-4 col-md-4 col-sm-12">
				<h2 class="section-heading"><i class="fa icon-lockalt-keyhole"></i> @Resources.Home.homeSupportHeadline</h2>
				<img class="img-responsive" src="/Content/Images/intro-screen-news.png" alt="">
				<p class="lead">
					<br />@Resources.Home.homeSupportLine1Text
					<br /><br />@Resources.Home.homeSupportLine2Text
					<br /><br />@Resources.Home.homeSupportLine3Text
				</p>
			</div>
		</div>
	</div>
</div>

<a href="#contact"></a>
<div class="banner">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<h2 class="">@Resources.Home.homeContactHeadline</h2>
				<h4 class="">@Resources.Home.homeContactAddressText</h4>

				<ul class="list-inline banner-social-buttons banner-message">
					<li>
						<a href="https://twitter.com/Cryptopia_NZ" class="btn btn-info btn-lg"><i class="fa fa-twitter fa-fw"></i><span class="network-name">Twitter</span></a>
					</li>
					<li>
						<a href="https://www.facebook.com/cryptopiaexchange" class="btn btn-info btn-lg"><i class="fa fa-facebook fa-fw"></i><span class="network-name">Facebook</span></a>
					</li>
					<li>
						<a href="https://www.linkedin.com/company/cryptopia-limited" class="btn btn-info btn-lg"><i class="fa fa-linkedin fa-fw"></i><span class="network-name">Linkedin</span></a>
					</li>
				</ul>
			</div>
		</div>
	</div>
</div>




@Html.Partial("_SEOPartial")