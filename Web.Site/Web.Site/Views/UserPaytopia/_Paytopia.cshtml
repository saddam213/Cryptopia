	<thead>
		<tr>
			<th>@Resources.UserData.paytopiaIdColumn</th>
			<th>@Resources.UserData.paytopiaTypeColumn</th>
			<th>@Resources.UserData.paytopiaAmountColumn</th>
			<th>@Resources.UserData.paytopiaCoinColumn</th>
			<th>@Resources.UserData.paytopiaStatusColumn</th>
			<th>@Resources.UserData.paytopiaUserNameColumn</th>
			<th>@Resources.UserData.paytopiaIsAnonColumn</th>
			<th>@Resources.UserData.paytopiaBeginsColumn</th>
			<th>@Resources.UserData.paytopiaEndsColumn</th>
			<th>@Resources.UserData.paytopiaTransferIdColumn</th>
			<th>@Resources.UserData.paytopiaRefundIdColumn</th>
			<th>@Resources.UserData.paytopiaTimestampColumn</th>
			<th></th>
		</tr>
	</thead>
	<tbody></tbody>
