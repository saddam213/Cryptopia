@{
	ViewBag.Title = Resources.UserWallet.notVerifiedPageTitle;
	ViewBag.IsFullPage = true;

}

@Html.AntiForgeryToken()
<div class="row withdraw-wrapper">
	<div class="col-sm-offset-1 col-md-offset-3 col-lg-offset-4 col-sm-10 col-md-6 col-lg-4 panel panel-default nopad withdraw-container">
		<div class="col-md-12" style="padding-top:15px">
			<div class="alert alert-warning">
				<h4>
					<b>@Resources.UserWallet.notVerifiedHeadline</b>
				</h4>
				<p>@Resources.UserWallet.notVerifiedInfoText</p>
				<p>@Html.Raw(String.Format(Html.Encode(Resources.UserWallet.notVerifiedInstructionText),
										   String.Format("<a href=\"/UserVerification\">{0}</a>", Resources.UserWallet.notVerifiedVerificationLink)))</p>
				<div class="text-center">
					<br />
					<small><i>@Resources.UserWallet.notVerifiedVerificationInfoText</i></small>
				</div>
			</div>
		</div>
		<div class="col-md-12" style="margin-bottom:15px">
			<div class="text-center">
				<div class="row">
					<div class="col-md-6">
						<a id="cancel" class="btn btn-default btnfullwidth" href="/Deposit">@Cryptopia.Resources.General.Back</a>
					</div>
					<div class="col-md-6">
						<a id="cancel" class="btn btn-success btnfullwidth" href="/UserVerification">@Resources.UserWallet.notVerifiedVerifyLink</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
