@model Cryptopia.Admin.Common.Incapsula.BlockIpAddressModel
@{
    Layout = "~/Views/Shared/_Modal.cshtml";
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button class="close simplemodal-close" aria-hidden="true" type="button" onclick="$.modal.close({ Cancel: true });">×</button>
            <h3 class="modal-title">Block IP Address</h3>
        </div>
        @using (Ajax.BeginForm("BlockIpAddress", "Incapsula", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "simplemodal-data", InsertionMode = InsertionMode.Replace }, new { @class = "form-horizontal" }))
        {
            <div class="modal-body">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()
                @Html.WriterValidationSummary()
                <div class="row">
                    <div class="col-xs-12">
                        @Html.LabelFor(m => m.Address, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control input", @rows = 1 })
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        @Html.LabelFor(m => m.AuthenticationCode, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.AuthenticationCode, new { @class = "form-control input", @rows = 1 })
                        @Html.ValidationMessageFor(model => model.AuthenticationCode, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-default simplemodal-close button-180" type="button" onclick="$.modal.close({ Cancel: true });">Cancel</button>
                <button id="submit" class="btn btn-success button-180" type="submit">Submit</button>
            </div>}
    </div>
</div>
@Scripts.Render("~/bundles/jqueryval")
