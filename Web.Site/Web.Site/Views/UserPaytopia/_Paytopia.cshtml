	var Resources = Resources || {};
	Resources.UserPaytopia = {
		EmptyListMessage: '@Resources.UserData.paytopiaEmptyListMessage',
		TransferIdPendingValue: '@Resources.UserData.paytopiaTransferIdPendingValue',
		TransferIdErrorValue: '@Resources.UserData.paytopiaTransferIdPendingValue',
		RefundIdErrorValue: '@Resources.UserData.paytopiaRefundIdErrorValue',
		InfoButton: '@Resources.UserData.paytopiaInfoButton'
	};
</script>
